<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    android:background="@drawable/g2bg"
    >

   

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAttach"
        android:layout_alignParentBottom="true"
        android:text="*Confidentiality of this Information will be maintained" 
        android:textColor="#FF4500" />

    <TextView
        android:id="@+id/pushMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextMail"
        android:layout_below="@+id/txtTitle"
        android:text="Detail Information:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF4500" />

    <LinearLayout
        android:id="@+id/linearLayoutR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:weightSum="75" >

        <Button
            android:id="@+id/btnAttach"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="25"
            android:background="@drawable/npb" 
            android:text="Attach proof"
            android:textColor="#FF4500"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnClearText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="25"
            android:text="Clear"
           android:textSize="15dp"
            android:background="@drawable/npb"
            android:textColor="#FF4500"
             android:layout_marginLeft="1dp" 
            android:layout_marginRight="1dp" />

        <Button
            android:id="@+id/btnSendRobberyLink"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="25"
            android:text="Send"
            android:textSize="15dp"
            android:background="@drawable/npb"
            android:textColor="#FF4500" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextMail"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_above="@+id/textAttach"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pushMsg"
        android:ems="10"
        android:inputType="textMultiLine"
        android:gravity="top" 
        android:textColor="#FF4500"/>


    <TextView
        android:id="@+id/textAttach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayoutR"
        android:layout_alignParentLeft="true"
        android:hint="(optional)" 
        android:textColor="#FF4500"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pushMsg"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="textView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF4500" />

</RelativeLayout>