<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0696969" >

    <Button
        android:id="@+id/btnNext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Next" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/pushMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="107dp"
        android:padding="10dp"
        android:text="To use the &apos;Emergency Help&apos; function of the application, you need to set the guardian&apos;s contact first. When you press the emergency button, you will be asked about the type of emergency you are in. Once you select the emergency type, an emergency message will be sent to your guardians which will inform them about the emergency type, your current GPS location and cell id of network provider"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pushMsg"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="It is recommended to use emergency help widget in distress as it saves valuable time in such cases"
        android:textColor="#FFFFFF" />

</RelativeLayout>